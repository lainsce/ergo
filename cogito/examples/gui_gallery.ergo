macro clicked_message() (( string )) {
    @"$this button clicked."
}

fun build_page(title = string, blurb = string) (( cogito.VStack )) {
    let vstack = cogito.vstack()
    .set_vexpand(true)
    .set_hexpand(true)
    .set_gap(12)
    .set_padding(0, 18, 0, 18)

    let info = cogito.label(blurb)
    .set_class(@"body")
    .set_wrap(true)
    vstack.add(info)

    return vstack
}

