; Cogito default theme (light)

*
  color: #222222
  font-size: 13

window
  background: #ffffff

button
  background: #6750a4
  color: #ffffff
  border-radius: 20
  min-height: 40
  padding: 10 24
  box-shadow: [
    0 1 3 0 #0000001f
  ]

button:hover
  background: #7965af
  box-shadow: [
    0 1 2 0 #0000003d
  ]

button:active
  background: #5a3f8e
  box-shadow: [
    0 1 2 0 #00000061
  ]

button.outlined
  background: transparent
  color: #6750a4
  border: 1 solid #79747e
  box-shadow: none

button.outlined:hover
  background: #6750a412
  border-color: #6750a4

button.outlined:active
  background: #6750a41f

button.outlined:disabled
  color: #1d1b2061
  border-color: #1d1b2012

button.text
  background: transparent
  color: #6750a4
  box-shadow: none
  padding: 10 12

button.text:hover
  background: #6750a412

button.text:active
  background: #6750a41f

button.text:disabled
  color: #1d1b2061

fab
  background: #6750a4
  color: #ffffff
  border-radius: 100
  min-width: 56
  min-height: 56
  box-shadow: [
    0 6 10 0 #0000001f
  ]

fab:hover
  background: #7965af
  box-shadow: [
    0 8 12 0 #00000024
  ]

fab:active
  background: #5a3f8e
  box-shadow: [
    0 4 8 0 #0000001f
  ]

nav_rail
  background: #f7f2fa
  color: #222222
  min-width: 80
  padding: 4 0

nav_rail:selection
  background: #e8def8
  color: #1d1b20

textfield
  background: #e7e0ec
  color: #222222
  border-radius: 4 4 0 0
  border: 0 none #000000
  min-height: 56
  padding: 8 16

textfield:hover
  background: #ece6f0

searchfield
  background: #f6f6f6
  color: #222222
  border-radius: 18
  min-height: 56
  min-width: 180
  padding: 8 16
  border-radius: 21

textview
  background: #f6f6f6
  color: #222222
  border-radius: 8
  min-height: 96

textfield:selection
  background: #72dec2

textview:selection
  background: #72dec2

dropdown
  background: #e7e0ec
  color: #222222
  border-radius: 4 4 0 0
  min-height: 56
  padding: 8 16

dropdown:hover
  background: #ece6f0

datepicker
  background: #ffffff
  border-radius: 18
  min-width: 300
  padding: 16
  box-shadow: [
    0 1 3 0 #0000001f
  ]

slider
  background: #79747e
  color: #6750a4
  track-height: 4
  min-height: 48
  min-width: 200

slider:hover
  color: #7965af

slider:active
  color: #5a3f8e

stepper
  background: #f6f6f6
  color: #222222
  border-radius: 8
  min-height: 32
  min-width: 96

tabs
  background: #f2f2f2
  color: #222222
  border-radius: 10
  min-height: 36

tabs:selection
  background: #ffffff

segmented
  background: #f2f2f2
  color: #222222
  border-radius: 10
  min-height: 36

view-switcher
  background: #ffffff
  color: #222222

progress
  background: #dddddd
  border-radius: 6
  min-height: 10
  min-width: 120

progress:selection
  background: #72dec2

toasts
  padding: 12

toast
  background: #222222
  color: #ffffff
  border-radius: 10
  min-height: 34

treeview
  background: #f6f6f6
  color: #222222
  border-radius: 8
  min-height: 180
  min-width: 200
  padding: 8

colorpicker
  background: #ffffff
  border-radius: 18
  min-width: 300
  padding: 16
  box-shadow: [
    0 1 3 0 #0000001f
  ]

toolbar
  background: #f6f6f6
  min-height: 44
  padding: 8 12

bottom-toolbar
  background: #f6f6f6
  min-height: 44
  padding: 8 12

iconbtn
  background: #0000000d
  border-radius: 99
  min-width: 42
  min-height: 42

image
  min-width: 20
  min-height: 20

label
  color: #222222
  padding: 6

tooltip
  background: #1e1e1e
  color: #ffffff
  border-radius: 6
  font-size: 13
  padding: 6 8

radio
checkbox
  color: #222222
  min-height: 24
  min-width: 24

checkbox:checked
radio:checked
  background: #72dec2

checkbox .check
radio .check
  color: #222222

checkbox:checked .check
radio:checked .check
  color: #222222

checkbox .box
radio .box
  background: #0000000d
  border-radius: 4

checkbox:checked .box
radio:checked .box
  background: #72dec2

checkbox .box:hover
radio .box:hover
  background: #72dec2

checkbox .box:active
radio .box:active
  background: #72dec2

checkbox .check:hover
radio .check:hover
  color: #111111

checkbox .check:active
radio .check:active
  color: #000000

switch
  color: #222222
  min-height: 28
  min-width: 64

switch track
  background: #b4b4b4

switch:checked track
switch:checked track
  background: #72dec2

switch track:hover
switch track:hover
  background: #c4c4c4

switch track:active
switch track:active
  background: #72dec2

switch knob
  background: #ffffff
  min-width: 32
  min-height: 24

switch knob:hover
  background: #f4f4f4

switch knob:active
  background: #e8e8e8

.monospace
  font-size: 13
  font-weight: normal

.tabular
  font-size: 13
  font-weight: normal

.title
  font-size: 32
  font-weight: normal

.subtitle
  font-size: 20
  font-weight: normal

.body
  font-size: 11
  font-weight: normal

list
  background: #ffffff
  border-radius: 0

list:selection
  background: #72dec2

grid
  background: #ffffff
  border-radius: 8

grid:selection
  background: #72dec2

appbar
  background: #f0f0f0

appbar.view
  background: #f0f0f0

appbar.sidebar
  background: #ffffff

