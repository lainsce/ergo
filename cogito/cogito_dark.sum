; Disabled state variants - 16% opaque On Surface for backgrounds, 32% for borders/text/icons

button:disabled
  background: alpha(@on-background, 16%)
  color: alpha(@on-background, 32%)

fab:disabled
  background: alpha(@on-background, 16%)
  color: alpha(@on-background, 32%)

chip:disabled
  background: alpha(@on-background, 16%)
  color: alpha(@on-background, 32%)
  border-color: alpha(@on-background, 32%)

textfield:disabled
  background: alpha(@on-background, 16%)
  color: alpha(@on-background, 32%)

searchfield:disabled
  background: alpha(@on-background, 16%)
  color: alpha(@on-background, 32%)

dropdown:disabled
  background: alpha(@on-background, 16%)
  color: alpha(@on-background, 32%)

slider:disabled
  color: alpha(@on-background, 32%)

stepper:disabled
  background: alpha(@on-background, 16%)
  color: alpha(@on-background, 32%)

checkbox:disabled
  color: alpha(@on-background, 32%)

radio:disabled
  color: alpha(@on-background, 32%)

switch:disabled
  color: alpha(@on-background, 32%)

