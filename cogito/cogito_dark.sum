  background: #3a3a3c

segmented:selection
  background: #3a3a3c

iconbtn:hover
  background: #3a3a3c
  color: #f2f2f7

iconbtn:active
  background: #4a4a4f
  color: #f2f2f7

appbar .iconbtn
  background: #2c2c2e

switch .track
  background: #3a3a3c

switch:checked .track
  background: #5a5a5f

