; Cogito dark theme
@diagnostics: warn
@primary: #d0bcff
@on-primary: #381e72
@surface: #111111
@surface-variant: #2c2c2e
@on-surface: #f2f2f7
@outline: #938f99

*
  color: @on-surface
  font-size: 16

window
  background: @surface

vstack
  background: #111111
  color: #f2f2f7

hstack
  background: #111111
  color: #f2f2f7

zstack
  background: #111111
  color: #f2f2f7

fixed
  background: transparent
  color: #f2f2f7

scroller
  background: #f5f5f5
  color: #f2f2f7
  padding: 0

scroller.sidebar
  background: #111111
  padding: 0

carousel
  background: transparent
  color: #f2f2f7
  min-height: 240
  min-width: 400
  border-radius: 26

carousel_item
  background: #4f378b
  color: #f2f2f7
  border-radius: 16
  padding: 16

label.carousel-item-label
  font-size: 21
  font-weight: bold
  color: #ffffff

dialogslot
  background: #00000066
  color: #f2f2f7

button
  background: @primary
  color: @on-primary
  border-radius: 100
  min-width: 120
  min-height: 56
  padding: 10 24

button:hover
  background: #e0cfff

button:active
  background: #b69df8

button.outlined
  background: transparent
  color: @primary
  border-radius: 20
  min-width: 0
  min-height: 40
  border: 1 solid @outline
  box-shadow: none

button.outlined:hover
  background: alpha(@primary, 12%)
  border-color: @primary

button.outlined:active
  background: alpha(@primary, 20%)

button.outlined:disabled
  color: #cac4d061
  border-color: #cac4d012

button.text
  background: transparent
  color: @primary
  border-radius: 20
  min-width: 0
  min-height: 40
  box-shadow: none
  padding: 10 12

button.text:hover
  background: alpha(@primary, 12%)

button.text:active
  background: alpha(@primary, 20%)

@when light
  window
    background: #ffffff

button.text:disabled
  color: #cac4d061

fab
  background: #d0bcff
  color: #381e72
  border-radius: 100
  min-width: 56
  min-height: 56

fab:hover
  background: #e0cfff

fab:active
  background: #b69df8

nav-rail
  background: #2b2930
  color: #f2f2f7
  min-width: 80
  padding: 4 0

nav-rail:selection
  background: #4a4458
  color: #e8def8

textfield
  background: #322f35
  color: #f2f2f7
  border-radius: 4 4 0 0
  min-height: 56
  padding: 8 16

textfield:hover
  background: #3f3c42

searchfield
  background: #2c2c2e
  color: #f2f2f7

textview
  background: #2c2c2e
  color: #f2f2f7

textfield:selection
  background: #3a3a3c

textview:selection
  background: #3a3a3c

dropdown
  background: #2c2c2e
  color: #f2f2f7

datepicker
  background: #2c2c2e
  color: #f2f2f7
  border-radius: 12
  min-width: 320
  min-height: 320
  padding: 16

datepicker:selection
  background: #3a3a3c

slider
  background: #938f99
  color: #d0bcff
  track-height: 4
  min-height: 48
  min-width: 200

slider:hover
  color: #e0cfff

slider:active
  color: #b69df8

stepper
  background: #2c2c2e
  color: #f2f2f7

tabs
  background: #2c2c2e
  color: #f2f2f7

tabs:selection
  background: #3a3a3c

segmented
  background: #2c2c2e
  color: #f2f2f7

viewswitcher
  background: #1c1c1e
  color: #f2f2f7

progress
  background: #3a3a3c
  border-radius: 100
  track-height: 4
  min-height: 12
  min-width: 120

progress:selection
  background: #6b6b6f

toasts
  padding: 12
  color: #f2f2f7

toast
  background: #2c2c2e
  color: #f2f2f7

treeview
  background: #2c2c2e
  color: #f2f2f7

colorpicker
  background: #2c2c2e
  color: #f2f2f7
  border-radius: 12
  min-width: 320
  min-height: 320
  padding: 16

colorpicker:selection
  background: #3a3a3c

toolbar
  background: #2c2c2e
  color: #f2f2f7
  min-height: 44
  padding: 8 12

iconbtn
  background: #2c2c2e
  color: #f2f2f7
  border-radius: 99
  min-width: 48
  min-height: 48

label
  color: #f2f2f7

.about-window
  background: #111111
  color: #f2f2f7

image.about-window-icon
  min-width: 128
  min-height: 128

label.about-window-title
  color: #f2f2f7
  font-size: 28
  font-weight: bold

label.about-window-license
  color: #a0a0a6
  font-size: 14

hstack.about-window-actions
  background: transparent
  padding: 4 0 0 0

tooltip
  background: #3a3a3c
  color: #f2f2f7

checkbox
radio
  color: #f2f2f7

checkbox:checked
radio:checked
  background: #3a3a3c

checkbox .check
radio .check
  color: #f2f2f7

checkbox:checked .check
radio:checked .check
  color: #f2f2f7

chip
  background: #322f35
  color: #e6e1e5
  border-radius: 100
  min-height: 32
  padding: 0 16

chip:hover
  background: #3f3c42

chip:active
  background: #48454f

chip:checked
  background: #4a4458
  color: #e8def8

checkbox .box
radio .box
  background: #2c2c2e
  border-color: #3a3a3c

checkbox:checked .box
radio:checked .box
  background: #3a3a3c

checkbox .box:hover
radio .box:hover
  background: #3a3a3c

checkbox .box:active
radio .box:active
  background: #3a3a3c

checkbox .check:hover
radio .check:hover
  color: #ffffff

checkbox .check:active
radio .check:active
  color: #ffffff

switch
  color: #f2f2f7

switch track
  background: #3a3a3c

switch:checked track
  background: #5a5a5f

switch track:hover
  background: #4a4a4f

switch track:active
  background: #5a5a5f

switch knob
  background: #ffffff
  min-width: 32
  min-height: 24

switch knob:hover
  background: #f4f4f4

switch knob:active
  background: #e8e8e8

; Keyboard focus ring
button:focus, button.text:focus, button.outlined:focus, iconbtn:focus, fab:focus, chip:focus, checkbox:focus, radio:focus, slider:focus, stepper:focus, segmented:focus, dropdown:focus, datepicker:focus, colorpicker:focus, nav-rail:focus, bottom-nav:focus
  border: 2 solid @primary

; textfield/searchfield/textview focus border handled in code (focus_from_keyboard only)

.monospace
.tabular
.title
.subtitle
.body
  color: #f2f2f7

list
  background: #2c2c2e
  color: #f2f2f7

list:selection
  background: #3a3a3c

grid
  background: #2c2c2e
  color: #f2f2f7

grid:selection
  background: #3a3a3c

appbar
  background: #2c2c2e
  color: #f2f2f7
  border: 0 solid #00000000

appbar.view
  background: #2c2c2e
  color: #f2f2f7

appbar.sidebar
  background: #1c1c1e

scroller.sidebar
  background: #1c1c1e

dialog
  background: #2c2c2e
  border-radius: 26

popover
  background: #2c2c2e
  border-radius: 12
  padding: 16
  box-shadow: [
    0 2 8 0 #0000001f
  ]

appbar .window-button
  border-color: #00000022
