appbar .window-min
  background: @error

appbar .window-max
  background: @inverse-primary

appbar .window-close:hover
  background: @error

appbar .window-close:active
  background: @outline

appbar .window-min:hover
  background: @error

appbar .window-min:active
  background: @error

appbar .window-max:hover
  background: @primary

appbar .window-max:active
  background: @inverse-primary

appbar .button:hover
  background: @surface-container-highest

appbar .button:active
  background: @surface-variant

appbar .iconbtn:hover
  background: @surface-container-highest

appbar .iconbtn:active
  background: @surface-variant

menu
  background: @inverse-on-surface
  color: @on-background

menu:selection
  background: @surface-container-highest

menu item
  background: @inverse-on-surface
  color: @on-background

menu_section
  background: transparent

menu_section item
  background: @inverse-on-surface
  color: @on-background

bottom-nav
  background: @surface-container-low
  color: @on-background

bottom-nav:selection
  background: @surface-variant
  color: @on-background

.datepicker
  background: @inverse-on-surface
  color: @on-background

.datepicker:selection
  background: @surface-container-highest

.textfield:selection
  background: @surface-container-highest

.textview:selection
  background: @surface-container-highest

dropdown:hover
  background: @surface-variant

searchfield:hover
  background: @surface-container-highest

searchfield:active
  border-color: @on-background

searchfield:selection
  background: @surface-container-highest

segmented:selection
  background: @secondary-container
  color: @on-secondary-container
  border: 1 solid @secondary-container

iconbtn:hover
  background: @surface-container-highest
  color: @on-background

iconbtn:active
  background: @surface-variant
  color: @on-background

appbar .iconbtn
  background: @inverse-on-surface

switch .track
  background: @surface-container-highest
  border: 2 solid @outline

switch:checked .track
  background: @primary
  border: 0 none @primary

switch .track:hover
  background: @outline

switch .track:active
  background: @primary

switch .knob
  background: @on-background

switch .knob:hover
  background: @on-background

switch .knob:active
  background: @on-background

toast:selection
  background: @outline

.primary-container
  background: @surface-variant
  color: @on-background

.secondary
  background: @on-surface-variant
  color: @surface-container-highest

.secondary-container
  background: @surface-variant
  color: @on-background

.tertiary
  background: @error
  color: @surface-container-highest

.tertiary-container
  background: @surface-variant
  color: @on-error-container

.error
  color: @error

.on-error
  background: @error
  color: @on-error

.error-container
  background: @error-container
  color: @on-error-container

.surface-variant
  background: @surface-variant
  color: @on-surface-variant

.surface-dim
  background: @surface-dim

.surface-bright
  background: @surface-container-highest

.surface-container-lowest
  background: @surface-dim

