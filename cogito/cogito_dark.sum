content-list
  background: #1c1c1e
  color: @on-surface
  border-radius: 12

content-list label
  padding: 0 16
  min-height: 80
  background: transparent

content-list=first
  border-radius: 12 12 8 8

content-list=last
  border-radius: 8 8 12 12

content-list=middle
  border-radius: 8

content-list=single
  border-radius: 12
