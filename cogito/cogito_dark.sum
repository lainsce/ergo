; Cogito dark theme
; Generated with primary #72dec2
@diagnostics: warn

; Primary palette
@primary: #72dec2
@on-primary: #00382b
@primary-container: #005142
@on-primary-container: #c8f7ef

; Secondary palette
@secondary: #84e8d0
@on-secondary: #00382b
@secondary-container: #005142
@on-secondary-container: #c8f7ef

; Tertiary palette
@tertiary: #a5ceca
@on-tertiary: #00382b
@tertiary-container: #1d4d49
@on-tertiary-container: #c8f7ef

; Error palette
@error: #ffb4ab
@on-error: #690005
@error-container: #93000a
@on-error-container: #ffdad6

; Neutral palette
@background: #191c1a
@on-background: #e1e3e0
@surface: #191c1a
@surface-tint: #72dec2
@on-surface: #e1e3e0

; Surface containers
@surface-dim: #0f110f
@surface-bright: #23312e
@surface-container-lowest: #0d100e
@surface-container-low: #1a1d1b
@surface-container: #1e211f
@surface-container-high: #282c2a
@surface-container-highest: #323632

; Surface variant
@surface-variant: #3f4946
@on-surface-variant: #bec9c4

; Outline
@outline: #89938f
@outline-variant: #3f4946

; Inverse colors
@inverse-surface: #e1e3e0
@inverse-on-surface: #2d312f
@inverse-primary: #006b56

; Shadow & Scrim
@shadow: #000000
@scrim: #000000

*
  color: @on-surface

window
  background: @surface

vstack
  background: @surface-dim
  color: @on-background

hstack
  background: @surface-dim
  color: @on-background

zstack
  background: @surface-dim
  color: @on-background

fixed
  background: transparent
  color: @on-background

scroller
  background: @on-background
  color: @on-background

scroller.sidebar
  background: @surface-dim

carousel
  background: transparent
  color: @on-background

carousel_item
  background: @surface-variant
  color: @on-background

label.carousel-item-label
  color: @on-background

dialogslot
  background: alpha(@shadow, 40%)
  color: @on-background

button
  background: @primary
  color: @on-primary

button:hover
  background: @on-background

button:active
  background: @on-surface-variant

button.outlined
  background: transparent
  color: @primary
  border: 1 solid @outline

button.outlined:hover
  background: alpha(@primary, 12%)
  border-color: @primary

button.outlined:active
  background: alpha(@primary, 20%)

button.outlined:disabled
  color: alpha(@on-background, 32%)
  border-color: alpha(@on-background, 32%)
  background: alpha(@on-background, 16%)
  border-color: alpha(@on-surface-variant, 7%)

button.text
  background: transparent
  color: @primary

button.text:hover
  background: alpha(@primary, 12%)

button.text:active
  background: alpha(@primary, 20%)

button.text:disabled
  color: alpha(@on-background, 32%)
  background: alpha(@on-background, 16%)

fab
  background: @on-background
  color: @surface-variant

fab:hover
  background: @on-background

fab:active
  background: @on-surface-variant

nav-rail
  background: @surface
  color: @on-background

nav-rail:selection
  background: @surface-variant
  color: @on-background

textfield
  background: @surface-container-highest
  color: @on-background

textfield:hover
  background: @surface-variant

searchfield
  background: @surface-container-high
  color: @on-background

textview
  background: @inverse-on-surface
  color: @on-background

textfield:selection
  background: @surface-container-highest

textview:selection
  background: @surface-container-highest

dropdown
  background: @inverse-on-surface
  color: @on-background

datepicker
  background: @inverse-on-surface
  color: @on-background

datepicker:selection
  background: @surface-container-highest

slider
  background: @surface-variant
  color: @primary

slider:hover
  color: @on-background

slider:active
  color: @on-surface-variant

stepper
  background: @inverse-on-surface
  color: @on-background

tabs
  background: @inverse-on-surface
  color: @on-background

tabs:selection
  background: @surface-container-highest

segmented
  background: transparent
  color: @on-surface
  border: 1 solid @outline

segmented:disabled
  background: alpha(@on-background, 16%)
  color: alpha(@on-background, 32%)

viewswitcher
  background: @surface-container-low
  color: @on-background

progress
  background: @surface-container-highest

progress:selection
  background: @outline

toasts
  color: @on-background

toast
  background: @inverse-on-surface
  color: @on-background

treeview
  background: @inverse-on-surface
  color: @on-background

colorpicker
  background: @inverse-on-surface
  color: @on-background

colorpicker:selection
  background: @surface-container-highest

toolbar
  background: @inverse-on-surface
  color: @on-background

iconbtn
  background: @inverse-on-surface
  color: @on-background

label
  color: @on-background

.about-window
  background: @surface-container-high-dim
  color: @on-background

label.about-window-title
  color: @on-background

label.about-window-license
  color: @outline

hstack.about-window-actions
  background: transparent

tooltip
  background: @surface-container-highest
  color: @on-background

checkbox
radio
  color: @on-background

checkbox:checked
radio:checked
  background: @surface-container-highest

checkbox .check
radio .check
  color: @on-background

checkbox:checked .check
radio:checked .check
  color: @on-background

chip
  background: @surface-container-highest
  color: @on-background

chip:hover
  background: @surface-variant

chip:active
  background: @surface-variant

chip:checked
  background: @surface-variant
  color: @on-background

checkbox .box
radio .box
  background: transparent
  border-color: @on-surface-variant

checkbox:checked .box
radio:checked .box
  background: @surface-container-highest

checkbox .box:hover
radio .box:hover
  background: @surface-container-highest

checkbox .box:active
radio .box:active
  background: @surface-container-highest

checkbox .check:hover
radio .check:hover
  color: @on-background

checkbox .check:active
radio .check:active
  color: @on-background

switch
  color: @on-background

switch track
  background: @surface-container-highest
  border: 2 solid @outline

switch:checked track
  background: @primary
  border: 0 none @primary

switch track:hover
  background: @outline

switch track:active
  background: @primary

switch knob
  background: @on-background

switch knob:hover
  background: @on-background

switch knob:active
  background: @on-background

; Keyboard focus ring
button:focus, button.text:focus, button.outlined:focus, iconbtn:focus, fab:focus, chip:focus, checkbox:focus, radio:focus, slider:focus, stepper:focus, segmented:focus, dropdown:focus, datepicker:focus, colorpicker:focus, nav-rail:focus, bottom-nav:focus
  border: 2 solid @primary

.monospace
.tabular
.big-display
.display
.view-title
.title
.view-subtitle
.subtitle
.heading
.content-title
.content-subtitle
.body
.caption
  color: @on-background

list
  background: @inverse-on-surface
  color: @on-background

list:selection
  background: @surface-container-highest

grid
  background: @inverse-on-surface
  color: @on-background

grid:selection
  background: @surface-container-highest

appbar
  background: @inverse-on-surface
  color: @on-background
  border: 0 solid alpha(@shadow, 0%)

appbar.view
  background: @inverse-on-surface
  color: @on-background

appbar.sidebar
  background: @surface

scroller.sidebar
  background: @surface-container-low

dialog
  background: @surface-container-high

popover
  background: @inverse-on-surface
  box-shadow: [
    0 2 8 0 alpha(@shadow, 12%)
  ]

appbar .window-button
  border-color: alpha(@shadow, 13%)

appbar .window-close
