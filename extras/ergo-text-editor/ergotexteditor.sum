@diagnostics: warn
@primary: #2f4a9a
@primary-container: #dbe4ff
@surface: #f8f9fb
@surface-strong: #eceff5
@text: #2b2b2b

* 
  color: @text
  font-size: 14

window
  background: @surface

vstack
hstack
appbar
  background: #ffffff00

appbar
  background: @surface-strong
  min-height: 46
  padding: 6 10

appbar .iconbtn
  background: @primary-container
  color: @primary
  border-radius: 10

appbar .iconbtn:hover
  background: mix(@primary-container, #ffffff, 35%)

appbar .iconbtn:active
  background: mix(@primary-container, #000000, 8%)
  border-radius: 16

textview
  background: #ffffff
  color: #222222
  padding: 12
  border-radius: 0

textview:focus
  border: 2 solid @primary

button
  background: @primary-container
  color: @primary
  border-radius: 10
  min-height: 36
  padding: 6 10

button:hover
  background: mix(@primary-container, #ffffff, 35%)

button:active
  background: mix(@primary-container, #000000, 8%)
  border-radius: 16

button:focus
  border: 2 solid @primary

button.outlined
  background: alpha(@primary, 0%)
  color: @primary
  border: 1 solid alpha(@primary, 30%)

button.outlined:focus
  border: 2 solid @primary

iconbtn:focus
  border: 2 solid @primary

@when dark
  window
    background: #121418
  textview
    background: #1b1f26
    color: #e8ecf5
  appbar
    background: #171b22
