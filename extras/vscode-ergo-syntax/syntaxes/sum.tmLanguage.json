{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "SUM",
  "scopeName": "source.sum",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#directives"
    },
    {
      "include": "#declarations"
    },
    {
      "include": "#selectorLines"
    },
    {
      "include": "#arrayItems"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.semicolon.sum",
          "match": ";.*$"
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "name": "meta.directive.assignment.sum",
          "begin": "^(\\s*)(@[A-Za-z_][A-Za-z0-9_-]*)(\\s*:\\s*)",
          "beginCaptures": {
            "2": {
              "name": "keyword.control.directive.sum"
            },
            "3": {
              "name": "punctuation.separator.key-value.sum"
            }
          },
          "end": "(?=\\s*(?:;.*)?$)",
          "patterns": [
            {
              "include": "#values"
            }
          ]
        },
        {
          "name": "meta.directive.bring.sum",
          "match": "^(\\s*)(@bring)\\b(?:\\s*:\\s*|\\s+)([^;\\n]+)",
          "captures": {
            "2": {
              "name": "keyword.control.directive.sum"
            },
            "3": {
              "name": "string.unquoted.sum"
            }
          }
        },
        {
          "name": "meta.directive.when.sum",
          "match": "^(\\s*)(@when)\\b(?:\\s+([^;\\n]+))?",
          "captures": {
            "2": {
              "name": "keyword.control.conditional.sum"
            },
            "3": {
              "name": "meta.condition.sum"
            }
          }
        }
      ]
    },
    "selectorLines": {
      "patterns": [
        {
          "name": "meta.selector.sum",
          "begin": "^([^\\s;][^\\n;]*)(?=\\s*(?:;.*)?$)",
          "beginCaptures": {
            "1": {
              "name": "meta.selector.text.sum"
            }
          },
          "end": "$",
          "patterns": [
            {
              "name": "punctuation.separator.selector.sum",
              "match": ","
            },
            {
              "name": "entity.other.attribute-name.pseudo-class.sum",
              "match": ":[A-Za-z_][A-Za-z0-9_-]*"
            },
            {
              "name": "entity.name.class.sum",
              "match": "\\.[A-Za-z_][A-Za-z0-9_-]*"
            },
            {
              "name": "entity.name.tag.sum",
              "match": "\\*|\\b[A-Za-z][A-Za-z0-9-]*\\b"
            }
          ]
        }
      ]
    },
    "declarations": {
      "patterns": [
        {
          "name": "meta.declaration.sum",
          "begin": "^(\\s+)([A-Za-z][A-Za-z0-9-]*)(\\s*:\\s*)",
          "beginCaptures": {
            "2": {
              "name": "support.type.property-name.sum"
            },
            "3": {
              "name": "punctuation.separator.key-value.sum"
            }
          },
          "end": "(?=\\s*(?:;.*)?$)",
          "patterns": [
            {
              "include": "#values"
            }
          ]
        }
      ]
    },
    "arrayItems": {
      "patterns": [
        {
          "name": "meta.array.item.sum",
          "begin": "^(\\s+)(?![A-Za-z@][A-Za-z0-9_-]*\\s*:)(?!\\s*\\])(?=\\S)",
          "end": "(?=\\s*(?:;.*)?$)",
          "patterns": [
            {
              "include": "#values"
            }
          ]
        }
      ]
    },
    "values": {
      "patterns": [
        {
          "name": "support.function.color.sum",
          "match": "\\b(?:alpha|mix)\\s*(?=\\()"
        },
        {
          "name": "variable.other.theme-token.sum",
          "match": "@[A-Za-z_][A-Za-z0-9_-]*\\b"
        },
        {
          "name": "string.quoted.double.sum",
          "begin": "\"",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.string.begin.sum"
            }
          },
          "end": "\"",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.sum"
            }
          }
        },
        {
          "name": "constant.other.color.rgb-value.sum",
          "match": "#(?:[0-9A-Fa-f]{3}|[0-9A-Fa-f]{6}|[0-9A-Fa-f]{8})\\b"
        },
        {
          "name": "constant.numeric.sum",
          "match": "\\b-?\\d+(?:\\.\\d+)?(?:sp)?\\b"
        },
        {
          "name": "constant.language.sum",
          "match": "\\b(?:transparent|none|solid|dashed|bold|normal|standard|warn|strict|light|dark|high-contrast|reduced-motion)\\b"
        },
        {
          "name": "variable.other.state.sum",
          "match": ":[A-Za-z_][A-Za-z0-9_-]*"
        },
        {
          "name": "punctuation.definition.list.begin.sum",
          "match": "\\["
        },
        {
          "name": "punctuation.definition.list.end.sum",
          "match": "\\]"
        },
        {
          "name": "punctuation.separator.comma.sum",
          "match": ","
        }
      ]
    }
  }
}
