; ErgoCalc SUM theme
@diagnostics: warn
@primary: #8C56BF
@primary-container: #D7C5E9
@primary-hover: #F1EAF7
@primary-active: #BEA0DB
@surface: #ffffff
@text: #2D2D2D
@muted: #6A6A6A

*
  color: @text
  font-size: 14

window
  background: @surface

vstack
hstack
zstack
  background: #ffffff00
  color: @text

appbar
  background: #f5f5f5
  color: @text
  min-height: 46
  padding: 6 10

appbar .iconbtn
  background: @primary-container
  color: @primary
  border-radius: 21

appbar .iconbtn:hover
  background: @primary-hover

appbar .iconbtn:active
  background: @primary-active
  border-radius: 10

vstack.calc-root
  padding: 18 18 18 18

vstack.calc-display
  border-radius: 12
  min-height: 92
  padding: 10 14

label.calc-display-working
  color: @text
  background: #ffffff00
  font-size: 34
  padding: 6 18
  font-variant-numeric: tabular-nums

label.calc-display-expression
  color: @muted
  background: #ffffff00
  font-size: 18
  padding: 6 18
  font-variant-numeric: tabular-nums

grid.calc-keypad
  background: #ffffff
  border-radius: 16
  padding: 12 18 18
  gap: 12

button
  background: @primary-container
  color: @primary
  border-radius: 10
  min-height: 46
  padding: 8 12

label.calc-spacer
  color: #00000000

button:hover
  background: @primary-hover
  color: @primary

button:active
  background: @primary-active
  color: @primary
  border-radius: 21

button:focus
  border: 2 solid @primary

button.outlined
  background: alpha(@primary, 0%)
  color: @primary
  border-radius: 10
  border: 1 solid alpha(@primary, 35%)

button.outlined:hover
  background: @primary-hover
  color: @primary
  border-color: @primary-hover

button.outlined:active
  background: @primary-active
  color: @primary
  border-radius: 21

button.text
  background: #F1ACC1
  color: #6A6A6A
  border-radius: 10
  padding: 8 12

button.text:hover
  background: #F8D8E2
  color: #6A6A6A

button.text:active
  background: #EA80A0
  color: #6A6A6A
  border-radius: 21

button.text:focus
  border: 2 solid @primary

button.calc-equals
  background: @primary
  color: #ffffff
  border: 0 none #000

button.calc-equals:hover
  background: #BEA0DB
  color: #ffffff

button.calc-equals:active
  background: mix(@primary, #000000, 18%)
  color: #ffffff
  border-radius: 21

button.calc-equals:focus
  border: 2 solid #ffffff

iconbtn:focus
  border: 2 solid @primary

dialog
  background: #ffffff
  color: #2D2D2D
  border-radius: 18
  padding: 20

label.about-window-title
  color: #2D2D2D

label.about-window-license
  color: #6A6A6A

hstack.about-window-actions
  background: #ffffff00
  gap: 10

tooltip
  background: @text
  color: #F5F5F5
  border-radius: 8
  padding: 6 8

@when dark
  window
    background: #121212
  appbar
    background: #1c1c1c
  grid.calc-keypad
    background: #1a1a1a
  label.calc-display-working
    color: #f1f1f1
  label.calc-display-expression
    color: #bbbbbb
