; ErgoCalc SUM theme
@diagnostics: warn

@primary: #8C56BF
@primary-container: #D7C5E9
@primary-hover: #F1EAF7
@primary-active: #BEA0DB
@bg: #f5f5f5
@surface: #ffffff
@text: #2D2D2D
@muted: #6A6A6A
@pink: #F1ACC1
@pink-hover: #F8D8E2
@pink-active: #EA80A0
@dark-bg: #121212
@dark-surface: #1c1c1c
@dark-keypad: #1a1a1a
@dark-text: #f2f2f7
@dark-muted: #bbbbbb

*
  color: @text
  font-size: 14

window
  background: @surface

vstack
hstack
zstack
  background: transparent
  color: @text

appbar
  background: @bg
  color: @text

vstack.calc-display
  border-radius: 12
  min-height: 92
  padding: 10 14

label.calc-display-working
  color: @text
  background: transparent
  font-size: 34
  padding: 6 18
  font-variant-numeric: tabular-nums

label.calc-display-expression
  color: @muted
  background: transparent
  font-size: 18
  padding: 6 18
  font-variant-numeric: tabular-nums

grid.calc-keypad
  background: @surface
  border-radius: 16
  padding: 12 18 18

button.calc-op
  background: alpha(@primary, 0%)
  color: @primary
  border: 1 solid alpha(@primary, 35%)

button:focus
  border: 2 solid @primary

button.calc-op:hover
  background: @primary-hover
  color: @primary
  border-color: @primary-hover

button.calc-op:active
  background: @primary-active
  color: @primary

button.calc-op:focus
  border: 2 solid @primary

button.calc-clear
  background: @pink
  color: @muted

button.calc-clear:hover
  background: @pink-hover
  color: @muted

button.calc-clear:active
  background: @pink-active
  color: @muted

button.text:focus
  border: 2 solid @primary

button.calc-clear:focus
  border: 2 solid @primary

button.calc-equals
  background: @primary
  color: @surface
  border: 0 none #000

button.calc-equals:hover
  background: @primary-active
  color: @surface

button.calc-equals:active
  background: mix(@primary, #000000, 18%)
  color: @surface

button.calc-equals:focus
  border: 2 solid @surface

iconbtn:focus
  border: 2 solid @primary

tooltip
  background: @text
  color: @bg
  border-radius: 8
  padding: 6 8

vstack.conv-panel
  background: @surface
  padding: 18 18
  border-radius: 16

label.conv-label
  color: @muted
  font-size: 12
  background: transparent

textfield.conv-input
textfield.conv-output
  font-size: 22
  border-radius: 10
  padding: 10 12

iconbtn.conv-swap
  background: @primary-container
  color: @primary

iconbtn.conv-swap:hover
  background: @primary-hover

iconbtn.conv-swap:active
  background: @primary-active

@when dark
  window
    background: @dark-bg
  appbar
    background: @dark-surface
  grid.calc-keypad
    background: @dark-keypad
  label.calc-display-working
    color: @dark-text
  label.calc-display-expression
    color: @dark-muted
  vstack.conv-panel
    background: @dark-keypad
  label.conv-label
    color: @dark-muted
