    let escaped = @"Line1\nLine2\tTabbed\n"
    write(escaped)

    -- Interpolation with expressions
    let a = 5
    let b = 7
    writef(@"Sum: {}\n", a + b)

    -- Mixing interpolation and raw text
    let lang = @"Ergo"
    let msg = @"Welcome to $lang programming!\n"
    write(msg)

    -- String length (Unicode-aware)
    let word = @"hÃ©llo"
    let chars = len(word)
    writef(@"word={} chars={}\n", word, chars)
}

