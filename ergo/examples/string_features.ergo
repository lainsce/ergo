-- Ergo Example: String Features

fun string_features () (( -- )) {
    write(@"-- string_features --\n")

    -- Simple string
    let greeting = @"Hello, Ergo!\n"
    write(greeting)

    -- String interpolation
    let name = @"World"
    write(@"Hello, $name!\n")

    -- Unicode string
    let emoji = @"Smile: ðŸ˜Š\n"
    write(emoji)

